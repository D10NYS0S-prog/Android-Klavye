<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/KeyboardBase">

    <!-- Satır 1: Kelime Tahminleri + Ayarlar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#E0E0E0"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/suggestion_1"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="14sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@color/suggestion_secondary"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <Button
            android:id="@+id/suggestion_2"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="14sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@color/suggestion_secondary"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <Button
            android:id="@+id/suggestion_3"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="14sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@color/suggestion_secondary"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <Button
            android:id="@+id/suggestion_4"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="14sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@color/suggestion_secondary"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <Button
            android:id="@+id/settings_button"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:text="⚙"
            android:textSize="16sp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:background="@color/suggestion_primary"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Satır 2: Sayılar 1 2 3 4 5 6 7 8 9 0 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/key_sym_1"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="1"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_2"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="2"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_3"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="3"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_4"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="4"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_5"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="5"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_6"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="6"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_7"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="7"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_8"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="8"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_9"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="9"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_0"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="0"
            android:textSize="20sp"
            style="@style/KeyBase" />
    </LinearLayout>

    <!-- Satır 3: Özel karakterler @ # $ % & * - + = -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/key_sym_at"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="\@"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_hash"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="#"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_dollar"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="$"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_percent"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="%"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_ampersand"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="&amp;"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_asterisk"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="*"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_minus"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="-"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_plus"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="+"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_equals"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="="
            android:textSize="20sp"
            style="@style/KeyBase" />
    </LinearLayout>

    <!-- Satır 4: Parantezler ve özel karakterler ( ) { } [ ] < > / \ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/key_sym_lparen"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="("
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_rparen"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text=")"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_lbrace"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="{"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_rbrace"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="}"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_lbracket"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="["
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_rbracket"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="]"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_less"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="&lt;"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_greater"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="&gt;"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_slash"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="/"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_backslash"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="\\"
            android:textSize="20sp"
            style="@style/KeyBase" />
    </LinearLayout>

    <!-- Satır 5: Noktalama ve özel karakterler ! ? : ; " ' ` ~ _ | -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/key_sym_shift"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="⇧"
            android:textSize="20sp"
            style="@style/KeyFunctional" />

        <Button
            android:id="@+id/key_sym_exclamation"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="!"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_question"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="?"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_colon"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text=":"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_semicolon"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text=";"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_quote"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="&quot;"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_apostrophe"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="'"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_backtick"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="`"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_sym_tilde"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="~"
            android:textSize="20sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_backspace"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="⌫"
            android:textSize="20sp"
            style="@style/KeyFunctional" />
    </LinearLayout>

    <!-- Satır 6: ABC, virgül, boşluk, nokta, Enter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/key_letters"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.5"
            android:text="ABC"
            android:textSize="14sp"
            style="@style/KeyFunctional" />

        <Button
            android:id="@+id/key_comma"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text=","
            android:textSize="22sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_space"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:text="Boşluk"
            style="@style/KeySpace" />

        <Button
            android:id="@+id/key_dot"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="."
            android:textSize="22sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_enter"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.5"
            android:text="↵"
            android:textSize="20sp"
            style="@style/KeyFunctional" />
    </LinearLayout>
</LinearLayout>
