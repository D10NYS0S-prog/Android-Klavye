<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/KeyboardBase">

    <!-- Kelime Önerileri Satırı -->
    <include layout="@layout/suggestions_bar" />

    <!-- Mod Değiştirme ve Silme Satırı -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/mode_switch"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:text="T9/T12"
            android:textSize="12sp"
            style="@style/KeyFunctional" />

        <Button
            android:id="@+id/key_backspace"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="⌫"
            android:textSize="20sp"
            style="@style/KeyFunctional" />
    </LinearLayout>

    <!-- 1. Satır: 1, 2, 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/key_1"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height_tall"
            android:layout_weight="1"
            android:text="1\n.,?!"
            android:textSize="16sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_2"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height_tall"
            android:layout_weight="1"
            android:text="2\nABCÇ"
            android:textSize="16sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_3"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height_tall"
            android:layout_weight="1"
            android:text="3\nDEF"
            android:textSize="16sp"
            style="@style/KeyBase" />
    </LinearLayout>

    <!-- 2. Satır: 4, 5, 6 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/key_4"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height_tall"
            android:layout_weight="1"
            android:text="4\nGĞHIİ"
            android:textSize="16sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_5"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height_tall"
            android:layout_weight="1"
            android:text="5\nJKL"
            android:textSize="16sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_6"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height_tall"
            android:layout_weight="1"
            android:text="6\nMNOÖ"
            android:textSize="16sp"
            style="@style/KeyBase" />
    </LinearLayout>

    <!-- 3. Satır: 7, 8, 9 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/key_7"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height_tall"
            android:layout_weight="1"
            android:text="7\nPQRSŞ"
            android:textSize="16sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_8"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height_tall"
            android:layout_weight="1"
            android:text="8\nTUVÜ"
            android:textSize="16sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_9"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height_tall"
            android:layout_weight="1"
            android:text="9\nWXYZ"
            android:textSize="16sp"
            style="@style/KeyBase" />
    </LinearLayout>

    <!-- 4. Satır: *, 0, # -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/key_star"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="*\nNext"
            android:textSize="14sp"
            style="@style/KeyFunctional" />

        <Button
            android:id="@+id/key_0"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="0\nBoşluk"
            android:textSize="14sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_hash"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="#\nOK"
            android:textSize="14sp"
            style="@style/KeyFunctional" />
    </LinearLayout>

    <!-- 5. Satır: Enter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="4dp">

        <Button
            android:id="@+id/key_enter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Enter ↵"
            android:textSize="14sp"
            style="@style/KeyFunctional" />
    </LinearLayout>
</LinearLayout>
