<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/KeyboardBase">

    <!-- Satır 1: Kelime Tahminleri + Ayarlar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#E0E0E0"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/suggestion_1"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="14sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@color/suggestion_secondary"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <Button
            android:id="@+id/suggestion_2"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="14sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@color/suggestion_secondary"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <Button
            android:id="@+id/suggestion_3"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="14sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@color/suggestion_secondary"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <Button
            android:id="@+id/suggestion_4"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="14sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@color/suggestion_secondary"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <Button
            android:id="@+id/settings_button"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:text="⚙"
            android:textSize="16sp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:background="@color/suggestion_primary"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Satır 1.5: Opsiyonel Sayı Satırı (Gizlenebilir) -->
    <LinearLayout
        android:id="@+id/number_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp"
        android:visibility="gone">

        <Button
            android:id="@+id/key_num_1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="16sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_num_2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="16sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_num_3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="16sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_num_4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="16sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_num_5"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="5"
            android:textSize="16sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_num_6"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="16sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_num_7"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="16sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_num_8"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="8"
            android:textSize="16sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_num_9"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="9"
            android:textSize="16sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_num_0"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="0"
            android:textSize="16sp"
            style="@style/KeyBase" />
    </LinearLayout>

    <!-- Satır 2: q w e r t y u ı i o p -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/key_q"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="q"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_w"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="w"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_e"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="e"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_r"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="r"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_t"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="t"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_y"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="y"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_u"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="u"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_ı"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="ı"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_i"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="i"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_o"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="o"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_p"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="p"
            style="@style/KeyBase" />
    </LinearLayout>

    <!-- Satır 3: a s d f g h j k l -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/key_a"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="a"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_s"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="s"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_d"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="d"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_f"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="f"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_g"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="g"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_h"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="h"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_j"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="j"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_k"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="k"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_l"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="l"
            style="@style/KeyBase" />
    </LinearLayout>

    <!-- Satır 4: ⇧ z x c v b n m ⌫ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/key_shift"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1.5"
            android:text="⇧"
            android:textSize="20sp"
            style="@style/KeyFunctional" />

        <Button
            android:id="@+id/key_z"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="z"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_x"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="x"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_c"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="c"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_v"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="v"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_b"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="b"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_n"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="n"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_m"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="m"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_backspace"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1.5"
            android:text="⌫"
            android:textSize="20sp"
            style="@style/KeyFunctional" />
    </LinearLayout>

    <!-- Satır 5: 12# , boşluk . ↵ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/key_symbols"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.5"
            android:text="12#"
            android:textSize="14sp"
            style="@style/KeyFunctional" />

        <Button
            android:id="@+id/key_comma"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text=","
            android:textSize="22sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_space"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:text="Boşluk"
            style="@style/KeySpace" />

        <Button
            android:id="@+id/key_dot"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="."
            android:textSize="22sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_enter"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.5"
            android:text="↵"
            android:textSize="20sp"
            style="@style/KeyFunctional" />
    </LinearLayout>
</LinearLayout>
