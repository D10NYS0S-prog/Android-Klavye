<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/KeyboardBase">

    <!-- Satır 1: Kelime Tahminleri + Ayarlar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#E0E0E0"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/suggestion_1"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="14sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@color/suggestion_secondary"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <Button
            android:id="@+id/suggestion_2"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="14sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@color/suggestion_secondary"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <Button
            android:id="@+id/suggestion_3"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="14sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@color/suggestion_secondary"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <Button
            android:id="@+id/suggestion_4"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text=""
            android:textSize="14sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@color/suggestion_secondary"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <Button
            android:id="@+id/settings_button"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="⚙"
            android:textSize="18sp"
            android:background="@color/suggestion_primary"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Satır 2: qw, er, ty, uı, op -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/key_qw"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="qw"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_er"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="er"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_ty"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="ty"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_ui"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="ui"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_op"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="op"
            style="@style/KeyBase" />
    </LinearLayout>

    <!-- Satır 3: as, df, gh, jk, l- -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/key_as"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="as"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_df"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="df"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_gh"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="gh"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_jk"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="jk"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_l"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="l-"
            style="@style/KeyBase" />
    </LinearLayout>

    <!-- Satır 4: ⇧, zx, cv, bn, m', ⌫ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/key_shift"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="⇧"
            android:textSize="20sp"
            style="@style/KeyFunctional" />

        <Button
            android:id="@+id/key_zx"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="zx"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_cv"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="cv"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_bn"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="bn"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_m"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="m'"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_backspace"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="⌫"
            android:textSize="20sp"
            style="@style/KeyFunctional" />
    </LinearLayout>

    <!-- Satır 5: 12#, ,, boşluk, ., ↵ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/key_symbols"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="12#"
            android:textSize="14sp"
            style="@style/KeyFunctional" />

        <Button
            android:id="@+id/key_comma"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text=","
            android:textSize="22sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_space"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:text="Boşluk"
            style="@style/KeySpace" />

        <Button
            android:id="@+id/key_dot"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="."
            android:textSize="22sp"
            style="@style/KeyBase" />

        <Button
            android:id="@+id/key_enter"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="↵"
            android:textSize="20sp"
            style="@style/KeyFunctional" />
    </LinearLayout>
</LinearLayout>
