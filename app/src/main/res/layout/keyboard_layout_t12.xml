<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ECECEC"
    android:padding="4dp">

    <!-- Mod Değiştirme ve Silme Satırı -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/mode_switch"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:text="T9/T12"
            android:textSize="12sp" />

        <Button
            android:id="@+id/key_backspace"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="⌫"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- 1. Satır: qw, er, ty, ui, op -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/key_qw"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="qw"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/key_er"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="er"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/key_ty"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="ty"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/key_ui"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="uı"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/key_op"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="op"
            android:textAllCaps="false" />
    </LinearLayout>

    <!-- 2. Satır: as, df, gh, jk, lü -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/key_as"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="as"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/key_df"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="df"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/key_gh"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="gğ"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/key_jk"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="jk"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/key_lu"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="lü"
            android:textAllCaps="false" />
    </LinearLayout>

    <!-- 3. Satır: zx, cv, bn, mö -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/key_zx"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="zx"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/key_cv"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="cç"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/key_bn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="bn"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/key_mo"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="mö"
            android:textAllCaps="false" />
    </LinearLayout>

    <!-- 4. Satır: Space, ., Enter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/key_space"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:layout_marginEnd="4dp"
            android:text="Boşluk" />

        <Button
            android:id="@+id/key_dot"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="." />

        <Button
            android:id="@+id/key_enter"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="↵"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>
