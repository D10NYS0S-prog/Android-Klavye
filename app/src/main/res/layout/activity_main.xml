<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#F5F5F5">

    <!-- App Logo/Icon -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⌨️"
        android:textSize="64sp"
        android:layout_marginBottom="16dp" />

    <!-- App Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T9 / T12 Türkçe Klavye"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="32dp" />

    <!-- Status Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:elevation="4dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            
            <TextView
                android:id="@+id/tv_keyboard_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Klavye durumu kontrol ediliyor..."
                android:textSize="16sp"
                android:textColor="#333333"
                android:lineSpacingExtra="4dp"
                android:gravity="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Instructions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Klavyeyi Etkinleştirmek İçin:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Aşağıdaki butona tıklayın\n2. 'Türkçe Klavyem' yanındaki düğmeyi açın\n3. Uyarıyı kabul edin\n4. Bir metin alanına dokunun\n5. Klavye seçicide 'Türkçe Klavyem'i seçin"
        android:textSize="14sp"
        android:textColor="#666666"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="24dp" />

    <!-- Enable Button -->
    <Button
        android:id="@+id/btn_enable_keyboard"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Klavyeyi Etkinleştir"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp" />

    <!-- Settings Button -->
    <Button
        android:id="@+id/btn_open_settings"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Klavye Ayarlarını Aç"
        android:textSize="14sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="#6200EE" />

    <!-- Info Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="T9 Modu: Sayısal tuşlar ile klasik yazım\nT12 Modu: QWERTY kompakt düzen"
        android:textSize="12sp"
        android:textColor="#999999"
        android:gravity="center"
        android:layout_marginTop="24dp" />

</LinearLayout>
