<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Keyboard Style -->
    <style name="KeyboardBase">
        <item name="android:background">@color/keyboard_background_light</item>
        <item name="android:padding">@dimen/keyboard_padding</item>
    </style>
    
    <!-- Base Key Style -->
    <style name="KeyBase">
        <item name="android:layout_margin">@dimen/key_margin</item>
        <item name="android:padding">@dimen/key_padding</item>
        <item name="android:textSize">@dimen/key_text_size</item>
        <item name="android:textColor">@color/key_text_light</item>
        <item name="android:background">@drawable/key_background_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">@dimen/key_elevation</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <!-- Functional Key Style (shift, backspace, etc.) -->
    <style name="KeyFunctional" parent="KeyBase">
        <item name="android:background">@drawable/key_functional_light</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <!-- Space Key Style -->
    <style name="KeySpace" parent="KeyBase">
        <item name="android:textSize">14sp</item>
    </style>
    
    <!-- Dark Theme Styles -->
    <style name="KeyboardBaseDark" parent="KeyboardBase">
        <item name="android:background">@color/keyboard_background_dark</item>
    </style>
    
    <style name="KeyBaseDark" parent="KeyBase">
        <item name="android:textColor">@color/key_text_dark</item>
        <item name="android:background">@drawable/key_background_dark</item>
    </style>
    
    <style name="KeyFunctionalDark" parent="KeyBaseDark">
        <item name="android:background">@drawable/key_functional_dark</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
